# Environnement
NODE_ENV=development

# Port du serveur
PORT=3001

# Configuration de la base de données
# Laissez DB_HOST vide pour utiliser SQLite en développement local
# Configurez pour MySQL en production
DB_HOST=
DB_PORT=3306
DB_NAME=painperdu_db
DB_USER=
DB_PASSWORD=

# JWT Secret (utilisez 'npm run generate-jwt' pour en générer un)
JWT_SECRET=CHANGEZ_MOI_UTILISEZ_npm_run_generate_jwt

# Expiration du token JWT (en secondes - 86400 = 24h)
JWT_EXPIRES_IN=86400

# Configuration CORS
# En développement local
CORS_ORIGIN=http://localhost:5173

# Limitation de taux (rate limiting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Taille limite des requêtes
MAX_REQUEST_SIZE=10mb